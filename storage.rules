rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload/read/delete temp PDFs
    // Cloud Function (via admin SDK) bypasses rules, but we're permissive here
    match /temp-pdfs/{allPaths=**} {
      allow read, write, delete: if request.auth != null;
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write, delete: if false;
    }
  }
}
